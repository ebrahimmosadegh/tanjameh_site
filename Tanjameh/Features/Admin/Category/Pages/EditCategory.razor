
<PageTitle>Edit Category</PageTitle>

<RadzenColumn SizeMD=12>
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Category</RadzenAlert>
    <RadzenTemplateForm TItem="Core.Entities.Category" Data="@category" Visible="@(category != null)" Submit="@FormSubmit">
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Name" Component="Name" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@category.Name" Name="Name" />
                <RadzenRequiredValidator Component="Name" Text="Name is required" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Description" Component="Description" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@category.Description" Name="Description" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Slug" Component="Slug" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@category.Slug" Name="Slug" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="ParentCategory" Component="ParentCategory" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown Data="@categoriesForParentCategoryId" TextProperty="DisplayText" ValueProperty="Id" AllowClear=true
                                Placeholder="Choose Parent Category" style="display: block; width: 100%" @bind-Value="@category.ParentCategoryId" Name="ParentCategoryId" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="جنسیت" Component="GenderTypeId" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown style="display: block; width: 100%" @bind-Value="@category.GenderType" Name="GenderType" Data="@genderTypes" AllowClear=true />
            </RadzenColumn>
        </RadzenRow>


        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Main Picture File Name" Component="MainPictureFileName" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@category.MainPictureFileName" Name="MainPictureFileName" dir="ltr" />
            </RadzenColumn>
        </RadzenRow>
        @*   <RadzenRow style="margin-bottom: 1rem">
        <RadzenColumn SizeMD="3">
        <RadzenLabel Text="Has Preview Picture" Component="HasPreviewPicture" style="width: 100%" />
        </RadzenColumn>
        <RadzenColumn SizeMD="9">
        <RadzenCheckBox @bind-Value="@category.HasPreviewPicture" Name="HasPreviewPicture" />
        </RadzenColumn>
        </RadzenRow> *@
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
            <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenColumn>

